<h3 class="center-align">Events</h3>
<div class="container">
    <div class="row">
    {{#each events}}
    <a href="/events/{{_id}}/details">
    <div class="col s12 m4">
        <!-- SMALL -->
        <div class="card small hoverable black-text">
            <div class="card-image">
            <img src="img/{{_id}}/poster.jpg" alt="{{title}}">
            </div>
            <div class="card-content">
            <span class="card-title">{{title}}</span>
            <p>{{description}}</p>
            </div>
            <div class="card-action">
            Date {{date}}
            Created by : {{user}}
            </div>
        </div>
    </div>
    </a>
    {{/each}}
</div>
</div>
